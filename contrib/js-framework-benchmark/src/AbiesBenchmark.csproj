<Project Sdk="Microsoft.NET.Sdk.WebAssembly">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <PublishTrimmed>true</PublishTrimmed>
    <TrimMode>partial</TrimMode>
    <BlazorEnableTimeZoneSupport>false</BlazorEnableTimeZoneSupport>
    <InvariantGlobalization>true</InvariantGlobalization>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>preview</LangVersion>
    <EnablePreviewFeatures>true</EnablePreviewFeatures>
    <InterceptorsNamespaces>$(InterceptorsNamespaces);Praefixum</InterceptorsNamespaces>
    <NoWarn>$(NoWarn);CA1416;CA2252</NoWarn>
  </PropertyGroup>

  <!-- Exclude Abies source files - they are referenced via ProjectReference, not compiled directly -->
  <ItemGroup>
    <Compile Remove="Abies/**/*.cs" />
    <None Remove="Abies/**/*" />
    <Content Remove="Abies/**/*" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="Abies/Abies.csproj" />
  </ItemGroup>

</Project>
