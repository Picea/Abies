<Project Sdk="Microsoft.NET.Sdk.WebAssembly">
  <PropertyGroup>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  <TargetFramework>net10.0</TargetFramework>
    <!-- Disable auto-generated assembly attributes to avoid duplicates -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <!-- Prevent duplicate TargetFrameworkAttribute -->
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
        <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>$(BaseIntermediateOutputPath)Generated</CompilerGeneratedFilesOutputPath>
    <InterceptorsNamespaces>$(InterceptorsNamespaces);Praefixum</InterceptorsNamespaces>
    <MonoRuntimeDebuggerEnabled>true</MonoRuntimeDebuggerEnabled>
    <EnablePreviewFeatures>true</EnablePreviewFeatures>
    <NoWarn>CA2252</NoWarn>
  </PropertyGroup>
  <!-- Release-only trimming for smaller bundles -->
  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <PublishTrimmed>true</PublishTrimmed>
    <TrimMode>full</TrimMode>
    <InvariantGlobalization>true</InvariantGlobalization>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Abies\Abies.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Markdig" Version="0.44.0" />
  </ItemGroup>
  <!-- Ensure a physical wwwroot/abies.js exists for the dev server -->
  <ItemGroup>
    <!-- Trigger rebuilds when the canonical abies.js changes -->
    <UpToDateCheckInput Include="..\Abies\wwwroot\abies.js" />
    <!-- Dotnet watch: restart when the canonical file changes -->
    <Watch Include="..\Abies\wwwroot\abies.js" />
  </ItemGroup>
  
  <!-- Copy the canonical abies.js before build/publish -->
  <Target Name="SyncAbiesJs" BeforeTargets="Build;ComputeFilesToPublish" Inputs="..\Abies\wwwroot\abies.js" Outputs="wwwroot\abies.js">
    <Copy SourceFiles="..\Abies\wwwroot\abies.js" DestinationFiles="wwwroot\abies.js" />
  </Target>
  
  <!-- Remove the Abies project's copy from publish to avoid NETSDK1152 duplicate -->
  <Target Name="RemoveDuplicateAbiesJs" AfterTargets="ComputeFilesToPublish">
    <ItemGroup>
      <!-- Remove any abies.js that comes from the Abies project reference -->
      <ResolvedFileToPublish Remove="@(ResolvedFileToPublish)" Condition="'%(ResolvedFileToPublish.RelativePath)' == 'wwwroot\abies.js' AND $([System.String]::new('%(ResolvedFileToPublish.OriginalItemSpec)').Contains('\Abies\wwwroot\'))" />
      <ResolvedFileToPublish Remove="@(ResolvedFileToPublish)" Condition="'%(ResolvedFileToPublish.RelativePath)' == 'wwwroot/abies.js' AND $([System.String]::new('%(ResolvedFileToPublish.OriginalItemSpec)').Contains('/Abies/wwwroot/'))" />
    </ItemGroup>
  </Target>
</Project>
